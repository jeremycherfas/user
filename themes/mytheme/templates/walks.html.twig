<!-- The base -->
{% embed 'partials/base.html.twig' %}

{% set collection = page.collection() %}


{% block content %}

<!-- Hard coded image -->
{% set blog_image = page.media['rainbow-pines.png'].brightness(-50) %}

{% if blog_image %}

<div class="flush-top blog-header blog-header-image" style="background-image: url({{ blog_image.url }});">

{% else %}

	<div class="blog-header">

{% endif %}

			{{ page.content }}

</div>
<!-- End of header div -->

{% if config.plugins.breadcrumbs.enabled %}
	{% include 'partials/breadcrumbs.html.twig' %}
{% endif %}

<!-- Blog item summaries -->
<div class="content-wrapper blog-content-list grid pure-g">
<!-- 	This is the list -->
	<div id="listing" class="block pure-u-2-3">
	<span class="h-feed">
<!-- Partials/walk_item.html.twig marks up h-entry correctly -->
				{% for child in collection %}
			        {% include 'partials/walk_summary.html.twig' with {'walk':page, 'page':child, 'truncate':true}  %}
			    {% endfor %}
<!-- End of h-feed -->
	</span>
                {% if config.plugins.pagination.enabled and collection.params.pagination %}
                    {% include 'partials/pagination.html.twig' with {'base_url':page.url, 'pagination':collection.params.pagination} %}
                {% endif %}

	</div>
<!-- 	End of listings div -->
<!-- </div> -->
	<div id="sidebar" class="block size-1-3 pure-u-1-3">
				{% include 'partials/sidebar.html.twig' with {'blog':page} %}
	</div>
</div>
</div>
	{% endblock %}

{% endembed %}
