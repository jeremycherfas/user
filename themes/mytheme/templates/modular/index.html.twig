<div class="modular-row callout white">
	{{ content }}

 
{% for p in page.find('/blog').children.order('date', 'desc').slice(0, 1) %}
{% set check = p.header.taxonomy.tag.0 %}

{# tests for whether the Tag is link #}
	{% if check == "link" %}

	<h1><img src="{{ url('theme://images/angle-double-right.svg') }}" alt="double angle right" height="32" width="32" style="display: inline;" ></i><a href="{{p.header.link}}"> {{ p.title }}</a></h1>

	{% else %}

    <h1><a href="{{p.url}}">{{ p.title }}</a></h1>

	{% endif %}

		<h2 class="subhead">{{ p.header.subhead }}</h2>
        <p>{{ p.date|date("M j, Y")}}</p>
        <p>{{ p.content }}</p>
                
{% endfor %}
</div>
