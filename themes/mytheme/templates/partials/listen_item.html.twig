<div class="list-item h-entry">
<a class="u-author" href="https://jeremycherfas.net"></a> 
<article class="p-listen-of">

<!-- 
<div class="list-item h-entry">
 -->
<!--     <div class="list-blog-header"> -->
		<div class="my-list-blog-header">
			<img src="{{page.url}}/{{page.header.theimage}}" class="u-photo my-artwork"> 
			<h2 class="my-headline p-name" style="font-size: 1.8em;">🎧
				<a href="{{ page.url }}" class="u-url">{{ page.title }}</a> 
			</h2>
			<span class="my-date list-blog-date"> <time class="dt-published" datetime="{{ page.date|date(" c") }}"> <span>{{ page.date|date("d") }}</span> <em>{{ page.date|date("M") }}</em> <em>{{ page.date|date("Y") }}</em> </time> </span> 

			<div class="my-summary" style="font-size:0.8em;">
			{% set thecontent = ( page.content | split('</p>') ) %}
				<span class="e-content"> {{ page.content | split('</p>') | first }} </span>
				<div class="my-ref" style="font-size:1.0em;">Listen <a href="{{page.header.theurl }}">here</a>.</div>
				
			</div>
			</div>
			{{ thecontent[1] }}
			</article>
			{% if page.taxonomy.tag %} <span class="tags"> {% for tag in page.taxonomy.tag %} <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a> {% endfor %} </span> {% endif %} 


{% set show_prev_next = true %}
{% if show_prev_next %} 
<p class="prev-next">
	{% if not page.isFirst %}
	<a class="button" href="{{ page.prevSibling.url }}"><img src="{{ url('theme://images/chevron-left.svg') }}" alt="chevron-left" style="display: inline; vertical-align: middle;" width="32" height="32"></i> Previous post</a>
	{% endif %}
	{% if not page.isLast %}
	<a class="button" href="{{ page.nextSibling.url }}">Next post <img src="{{ url('theme://images/chevron-right.svg') }}" alt="chevron-right" style="display: inline; vertical-align: middle;" width="32" height="32"></i></a>
	{% endif %}
{% endif %}  
</p>
</div>


		

    
