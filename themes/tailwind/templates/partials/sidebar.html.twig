{% set feed_url = blog.url == '/' or blog.url == base_url_relative ? (base_url_relative~'/'~blog.slug) : blog.url %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}

{% if config.plugins.twigfeeds.enabled %}
<div class="sidebar-content">
<div class="stream ">
<h4 class="text-center">Stream</h4>

{% for name, feed in twig_feeds if name == 'Stream' %}
    {% for item in feed.items %}
        <div class="flex flex-row text-lg px-2 md:text-xl md:px-4">
            <time class="w-1/4 flex-shrink-0">{{ item.date.date|nicetime(false) }}</time><a class=" " href="{{ item.url }}">{{ item.title }}</a>
        </div>

    {% endfor %}
{% endfor %}
</div>

</div>
{% endif %}

{{ page.find('/modules/sidebar').content|raw }}

{% if config.plugins.archives.enabled %}
<div class="sidebar-content">
    <h4>{{ 'THEME_QUARK.SIDEBAR.ARCHIVES.HEADLINE'|t }}</h4>
	{% include 'partials/archives.html.twig' with {'base_url':new_base_url} %}
</div>
{% endif %}

{% block spammers %}

{% include 'partials/sparklines.html.twig' %}

{% endblock %}

{% if config.plugins.feed.enabled %}

    <h4 class="text-center">Feeds</h4>
<div class="feeds flex flex-row justify-center pb-2">
    <a class="class="hover:bg-transparent" href="{{ feed_url }}.atom"><div class="flex-shrink-0 hover:bg-orange-200 text-orange-500 hover:text-blue-700 py-2 px-4 md:mx-4 border border-blue-700 hover:border-orange-500 rounded md:text-lg"><i class="fa fa-rss-square"></i> Atom 1.0</div></a>
    <a class="class="flex-shrink-0 hover:bg-transparent" href="{{ feed_url }}.rss"><div class="hover:bg-orange-200 text-orange-500 hover:text-blue-700 py-2 px-4 mx-2 md:mx-4 border border-blue-700 hover:border-orange-500 rounded md:text-lg"><i class="fa fa-rss-square"></i> RSS</div></a>
    {% if config.plugins.feed.enable_json_feed %}<a class="class="hover:bg-transparent" href="{{ feed_url }}.json"><div class="flex-shrink-0 hover:bg-orange-200 text-orange-500 hover:text-blue-700 py-2 px-4 md:mx-4 border border-blue-700 hover:border-orange-500 rounded md:text-lg"><i class="fa fa-rss-square"></i> JSON</div></a>{% endif %}
</div>

{% endif %}
