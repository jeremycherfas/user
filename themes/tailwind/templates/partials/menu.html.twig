<!-- This is based on bsag's menu  -->
<header class="w-full bg-gray-200 px-4 mb-2 md:mb-1 lg:mx-auto md:border-b-8 md:border-gray-300">

<style type=text/css>input#nav-toggle:checked~label#show-button{display:none}input#nav-toggle:checked~label#hide-button{display:flex}input#nav-toggle:checked~#nav-menu{display:block}</style>

<section class="pt-4 items-center md:pb-4 md:16 md:mx-0 md:px-4 md:relative md:flex md:flex-grow md:items-center md:content-center pb-2 bg-gray-200 ">

<nav class="flex items-center justify-between flex-wrap opacity-100 pb-2 bg-gray-200 ">

<a href="{{ base_url_absolute }}" class="name">
	<h1 class=" m-0 text-blue-700">Jeremy Cherfas</h1>
</a>

<input id=nav-toggle type=checkbox class=hidden>
<label id=show-button for=nav-toggle class="items-center block md:hidden text-gray-500 hover:text-blue-500">
<svg class="fill-current h-4 w-4" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
<title>Menu Open</title>
<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0V0z"/>
</svg>
</label>

<label id=hide-button for=nav-toggle class="items-center hidden text-gray-500 hover:text-blue-500">
<svg class="fill-current h-4 w-4" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
<title>Menu Close</title>
<polygon points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2" transform="rotate(45 10 10)"/>
</svg>
</label>

<div class="md:hidden ">
	<div class="searchbox z-40 pt-2 pb-2">
    	<div class="flex justify-center items-center">
        {% include 'partials/simplesearch_searchbox.html.twig' %}
        </div>
	</div>
</div>

<!-- <div class="md:w-5/6 md:inline-block"> -->
<!-- <ul id="navigation" class="bg-white md:bg-transparent opacity-100 pl-2 py-4 h-full md:flex md:items-center md:px-0 md:py-0 md:justify-end"> -->
<ul id=nav-menu class="hidden w-full md:py-2 md:flex md:w-auto md:block md:mt-0 border border-gray-200 rounded-md md:border-0 md:shadow-none">

                        {% if (my_collection.params.taxonomies.tag) %}
                        <!~~ If this is a tag page ~~>

<li class="menu"><a href="/grav" class="text-blue-800 inline-block mb-0 tracking-wide uppercase md:px-4 ">home</a></li>
                        <li class="menu"><a href="/grav/about" class="text-blue-800 inline-block mb-0 tracking-wide uppercase md:px-4">about</a></li>
                        <li class="menu"><a href="/grav/blog" class="text-blue-800 inline-block mb-0 tracking-wide uppercase md:px-4">posts</a></li>
                        <li class="menu"><a href="/grav/reviews" class="text-blue-800 inline-block mb-0 tracking-wide uppercase  md:px-4">reviews</a></li>
                        <li class="menu"><a href="/grav/stream" class="text-blue-800 inline-block mb-0 tracking-wide uppercase md:px-4">micro-posts</a></li>
                        
                        {% endif %}

                        {% for p in my_collection %}
                        <!~~ Not a tag page ~~>
                        {% if p.header.menu %}
                        {% if page.slug == p.slug %}
                        <li class="menu"><a href="" class="text-blue-800 inline-block mb-0 tracking-wide uppercase font-bold md:px-4">{{ p.menu }}</a></li>
                        {% else %}
                        <li class="menu"><a href="{{ p.url }}" class="text-blue-800 inline-block mb-0 tracking-wide uppercase md:px-4">{{ p.menu }}</a></li>
                        {% endif %}
                        {% endif %}
                        {% endfor %}

</ul>
<!-- </div> -->
</section>

</nav>

</header>