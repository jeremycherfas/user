<div class="h-entry flex-shrink-0 w-full pt-4"> <!-- Essential for sidebar position -->
<article>
        <div class="text-sm md:text-2xl">
            {% include 'partials/blog/date.html.twig' %}
        </div>

        <div class="px-2 md:pl-4">
        {% include 'partials/blog/title.html.twig' %}
        {% if page.header.subhead %}
        <h2 class="text-lg md:text-3xl md:mr-4 text-blue-700 mt-0 ">{{ page.header.subhead }}</h2>
        {% endif %}
        </div> <!-- End title stuff -->


{% include 'partials/hcard.html.twig' %}


<div class="e-content text-sm md:text-lg lg:text-2xl pl-2 md:mr-4 md:ml-2">

{% if page.header.image %}
<!-- Is there an image in the front matter?  -->

{% if page.header.image | starts_with('artwork-resized') %}
<!-- This is a listen with a podcast image -->

<a href="{{page.header.theurl}}" class="u-listen-of"><img class="float-left mt-2 mr-4" src="{{ page.url ~ '/' ~ page.header.image }}" alt="Podcast artwork" height="150" width="150"></a>
{% block listen %}
{% include 'partials/listen-item.html.twig' %}
{% endblock listen %}
{% endif %}


{% if not page.header.image | starts_with('artwork-resized') %}
<!-- This is a review, with an image that is not podcast artwork -->

<a href="{{page.header.theurl}}" class=" "><img class="float-left mt-2 mr-4" src="{{ page.url ~ '/' ~ page.header.image }}" alt="{{ page.header.imagealt }}" height="150" width="150"></a>
{% endif %}
{% endif %}

{% if not page.header.image | starts_with('artwork-resized') %}
<!-- Do not repeat content if this is a podcast listen -->

{{ page.content|raw }}
{% endif %}
    
</div>

</article>

{% if page.header.form == 'contact-form' %}
<hr class="mt-2 mb-2 md:mb-4" >
<h2 class="mt-2 pl-2 text-xl md:text-3xl" >Get in touch</h2>
{% include "forms/form.html.twig" with { form: forms( {route:'/form'} ) } %}
<hr class="mt-2 mb-4 >
{% endif%}

</div> <!-- Ends item -->

<div class="flex justify-center py-2">
    {% include 'partials/blog/taxonomy.html.twig' %}
</div>

<div class="navigation flex flex-row justify-around pb-2">
<div class="button">
    {% if not page.isLast %}
 <button class="bg-transparent hover:bg-orange-200 text-orange-500 font-semibold hover:text-blue-700 py-2 px-4 border border-blue-700 hover:border-transparent rounded">
            <a class="btn" href="{{ page.prevSibling.url }}"><i class="fa fa-angle-left"></i> Previous</a>
</button>
    {% endif %}
</div>

<div class="button">
    {% if not page.isFirst %}
<button class="bg-transparent hover:bg-orange-200 text-orange-500 font-semibold hover:text-blue-700 py-2 px-4 border border-blue-700 hover:border-transparent rounded">
        <a class="btn" href="{{ page.nextSibling.url }}">Next <i class="fa fa-angle-right"></i></a>
    {% endif %}
</button>
</div>
</div>

