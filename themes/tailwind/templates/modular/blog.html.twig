<div class="flex flex-col md:border-solid md:border-grey-700 border-t-16 md:border-t-8 ">
    <h1 class="px-2 md:px-4 md:pt-2 text-3xl md:text-3xl text-grey-700">Older posts</h1>
    {{ content }}
    <div class="md:pl-2 lg:w-3/4 lg:mx-auto">
        <div class="md:flex md:flex-row md:items-start md:justify-between md:-mx-4 ">
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in page.find('/blog').children.order('date', 'desc').slice(1, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in page.find('/blog').children.order('date', 'desc').slice(2, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in page.find('/blog').children.order('date', 'desc').slice(3, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% include 'partials/about.html.twig' %}
