{% set collection = taxonomy.findTaxonomy({'category':'blog'}) %}
{% set ordered_collection = collection.order('date','desc').slice(0,10) %}

<div class="flex flex-col md:border-solid md:border-grey-700 border-t-16 md:border-t-8 ">
    <h1 class="px-2 md:px-4 md:pt-2 text-grey-700">Older posts</h1>

    <div class="md:pl-2 lg:w-3/4 lg:mx-auto">
        <div class=" panels md:flex md:flex-row md:items-start md:justify-between md:-mx-4 ">
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in ordered_collection|slice(1, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in ordered_collection|slice(2, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
            <div class="md:flex-none md:h-full md:w-1/3 px-4">
                {% for p in ordered_collection|slice(3, 1) %}
                    {% include 'partials/home-item.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>


