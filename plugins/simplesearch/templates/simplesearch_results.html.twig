{% extends 'partials/simplesearch_base.html.twig' %}

{% block body %}

{% block content %}

<div class="md:flex ">
    <div class=" ">
<!--         <h1 class="search-header">{{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS"|t }}</h1> -->
        <div class="center">
            {% include 'partials/simplesearch_searchbox.html.twig' %}
        </div>

            {% if query %}
                {% set count = search_results ? search_results.count : 0 %}
                {% if count is same as( 1 ) %}
<h3 class=" ">Your search for <strong>{{ (query|e)|raw }}</strong> yielded <strong>{{ count }}</strong> result. </h3>
                {% else %}
<h3 class=" ">Your search for <strong>{{ (query|e)|raw }}</strong> yielded <strong>{{ count }}</strong> results. </h3>
                {% endif %}
            {% endif %}

            </div>

     <div class=" ">       
        <div class="all-items flex flex-col relative md:w-2/3 ">
        {% for page in search_results %}
            {% include 'partials/blog-list-item.html.twig' with {'page': page} %}
        {% endfor %}
        </div>
    </div>
    </div>
{% endblock content %}

{% block sidebar %}
{% include 'partials/mysidebar.html.twig' %}
{% endblock sidebar%}

</div>
    
    {% block footer %}
{% include 'partials/myfooter.html.twig' %}
{% endblock footer %}

{% endblock body %}
