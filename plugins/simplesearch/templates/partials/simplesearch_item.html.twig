<section class="search-row">

    {% set banner = page.media.images|first %}

    {% if banner %}
        <div class="search-image">
            <a href="{{ page.url }}">{{ banner.cropZoom(100,100).html|raw }}</a>
        </div>
    {% endif %}
    <div class="search-item">
<!--         <div class="search-title"> -->
		<div class="titlestuff">
		<div class="date-clock">
			{% include 'partials/blog/date.html.twig' %} 
		</div>

            <h3 class="p-name"><a href="{{ page.url }}" class="u-url">{{ page.title }}</a></h3>
<!--         </div> -->

        <p>{{ page.summary|raw }}</p>

        <hr/>
    </div>
</section>
